# Configuração do Banco de Dados MySQL
MYSQL_ROOT_PASSWORD=your_strong_root_password
MYSQL_DATABASE=personal_ai_db
MYSQL_USER=user
MYSQL_PASSWORD=your_strong_password

# URL de Conexão (usada pela aplicação)
# O nome 'db' é o nome do serviço no docker-compose.yml
DATABASE_URL="mysql+mysqlclient://${MYSQL_USER}:${MYSQL_PASSWORD}@db:3306/${MYSQL_DATABASE}"

# Chaves de API (preencha depois)
GROQ_API_KEY="groq_api_key_aqui"
YOUTRACK_API_TOKEN="youtrack_token_aqui"
YOUTRACK_BASE_URL="https://seu-dominio.youtrack.cloud"

# Credenciais Google (serão geradas como client_secret.json)
GOOGLE_CLIENT_ID="google_client_id_aqui"
GOOGLE_CLIENT_SECRET="google_client_secret_aqui"